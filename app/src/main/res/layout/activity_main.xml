<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45500dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_SayiGiris"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="viewEnd"
            android:textColor="@color/agri"
            android:textSize="60sp"
            android:ems="10"
            android:inputType="text"
            android:text="" />

        <LinearLayout
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="55dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="35dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_temizle"
                    android:layout_width="250dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/kgri"
                    app:cornerRadius="35dp"
                    android:text="AC"
                    android:textSize="27sp" />

                <Button
                    android:id="@+id/btn_bolme"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="15dp"
                    android:backgroundTint="@color/sari"
                    android:layout_weight="1"
                    android:text="รท" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btn1"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_marginLeft="3dp"
                    android:backgroundTint="@color/kgri"
                    android:text="1"
                    android:textSize="27sp"
                    app:cornerRadius="35dp" />

                <Button
                    android:id="@+id/btn2"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_marginLeft="8dp"
                    android:backgroundTint="@color/kgri"
                    android:text="2"
                    android:textSize="27sp"
                    app:cornerRadius="35dp" />

                <Button
                    android:id="@+id/btn3"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="8dp"
                    android:backgroundTint="@color/kgri"
                    android:text="3"
                    android:textSize="27sp"
                    app:cornerRadius="35dp" />

                <Button
                    android:id="@+id/btn_carpi"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:backgroundTint="@color/sari"
                    android:text="X"
                    android:textSize="27sp"
                    app:cornerRadius="35dp" />
            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn4"
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:layout_marginLeft="3dp"
                        android:backgroundTint="@color/kgri"
                        android:text="4"
                        android:textSize="27sp"
                        app:cornerRadius="35dp" />

                    <Button
                        android:id="@+id/btn5"
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:backgroundTint="@color/kgri"
                        android:text="5"
                        android:textSize="27sp"
                        app:cornerRadius="35dp" />

                    <Button
                        android:id="@+id/btn6"
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:layout_marginLeft="1dp"
                        android:layout_marginRight="8dp"
                        android:backgroundTint="@color/kgri"
                        android:text="6"
                        android:textSize="27sp"
                        app:cornerRadius="35dp" />

                    <Button
                        android:id="@+id/btn_eksi"
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:backgroundTint="@color/sari"
                        android:text="-"
                        android:textSize="27sp"
                        app:cornerRadius="35dp" />
                </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="104dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn7"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_marginLeft="3dp"
                android:backgroundTint="@color/kgri"
                android:text="7"
                android:textSize="27sp"
                app:cornerRadius="35dp" />

            <Button
                android:id="@+id/btn8"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="8dp"
                android:backgroundTint="@color/kgri"
                android:text="8"
                android:textSize="27sp"
                app:cornerRadius="35dp" />

            <Button
                android:id="@+id/btn9"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="8dp"
                android:backgroundTint="@color/kgri"
                android:text="9"
                android:textSize="27sp"
                app:cornerRadius="35dp" />

            <Button
                android:id="@+id/btn_arti"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:backgroundTint="@color/sari"
                android:text="+"
                android:textSize="27sp"
                app:cornerRadius="35dp" />

        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/btn_nokta"
                                android:layout_width="wrap_content"
                                android:layout_height="100dp"
                                android:layout_marginLeft="3dp"
                                android:backgroundTint="@color/kgri"
                                android:text="."
                                android:textSize="27sp"
                                app:cornerRadius="35dp" />

                            <Button
                                android:id="@+id/btn0"
                                android:layout_width="wrap_content"
                                android:layout_height="100dp"
                                android:layout_marginLeft="8dp"
                                android:layout_marginRight="8dp"
                                android:backgroundTint="@color/kgri"
                                android:text="0"
                                android:textSize="27sp"
                                app:cornerRadius="35dp" />

                            <Button
                                android:id="@+id/btn_delete"
                                android:layout_width="wrap_content"
                                android:layout_height="100dp"
                                android:layout_marginLeft="1dp"
                                android:layout_marginRight="8dp"
                                android:backgroundTint="@color/kgri"
                                android:text="Del"
                                android:textSize="27sp"
                                app:cornerRadius="35dp" />

                            <Button
                                android:id="@+id/btn_esittir"
                                android:layout_width="wrap_content"
                                android:layout_height="100dp"
                                android:backgroundTint="@color/sari"
                                android:text="="
                                android:textSize="27sp"
                                app:cornerRadius="35dp" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>